<div class="wiki-show">
  <h1> <%= markdown(@wiki.title) %> </h1>
    <small>
      submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= 'FIX' %>
    </small>
    <div class="col-md-16">
      <p><%= markdown(@wiki.body) %></p>
      <%= link_to "Edit Wiki", edit_wiki_path, class: 'btn btn-primary' %>

      <% if (current_user.role == 'admin' && @wiki.private == true) || (current_user.role == 'premium' && @wiki.private == true && @wiki.user_id == current_user.id) %>
        <%= link_to "Add Collaborator", new_wiki_collaborator_path(@wiki), class: 'btn btn-info' %>
      <% end %>

      <div class="user-info pull-right">
      <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this wiki?' } %>
      </div>
    </div>

    <% if @wiki.private %>
      <% if Collaborator.exists?(wiki_id: @wiki) %>
        <%= render partial: 'collaborators/users' %>
      <% end %>
    <% end %>
